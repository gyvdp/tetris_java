<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="container" minHeight="108" minWidth="90" xmlns="http://javafx.com/javafx/11.0.2"
  xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/tetriminoholder.css"
  fx:controller="esi.acgt.atlj.client.view.controllers.TetriminoHolderController">
  <ImageView fx:id="background" fitHeight="108" fitWidth="90" pickOnBounds="true"
    preserveRatio="true">
    <Image url="@../image/bg/tetriminoholder.png"/>
  </ImageView>
  <ImageView fx:id="tetrimino" fitHeight="62" fitWidth="90" pickOnBounds="true" preserveRatio="true"
    StackPane.alignment="BOTTOM_CENTER">
    <StackPane.margin>
      <Insets bottom="14"/>
    </StackPane.margin>
  </ImageView>
  <Label fx:id="typeText" alignment="CENTER" contentDisplay="CENTER" minHeight="14" minWidth="90"
    styleClass="nes-text" text="NEXT" textAlignment="CENTER" textFill="WHITE"
    StackPane.alignment="TOP_CENTER">
    <padding>
      <Insets top="14" left="14" right="14"/>
    </padding>
    <font>
      <Font size="14.0"/>
    </font>
  </Label>
</StackPane>
